<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Простая авторизация</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div class="login-container">
        <h1>Вход в систему</h1>
        <form id="loginForm" onsubmit="return validateForm()">
            <div class="input-group">
                <label for="username">Логин:</label>
                <input type="text" id="username" name="username" placeholder="Введите логин" required>
            </div>
            <div class="input-group">
                <label for="password">Пароль:</label>
                <input type="password" id="password" name="password" placeholder="Введите пароль" required>
            </div>
            <button type="submit" class="login-btn">Войти</button>
        </form>
        <p id="error-message" class="error"></p>
    </div>

    <script>
        function validateForm() {
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;
            const errorElement = document.getElementById('error-message');

            // Простая проверка (можно заменить на запрос к серверу)
            if (username === 'admin' && password === '12345') {
                alert('Успешный вход!');
                return true; // Форма отправится (если бы был action)
            } else {
                errorElement.textContent = 'Неверный логин или пароль!';
                return false; // Блокировка отправки
            }
        }
    </script>
</body>
</html>
